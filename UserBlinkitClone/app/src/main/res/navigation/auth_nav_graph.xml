<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.userBlinkit.auth.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:popUpTo="@id/splashFragment"
            app:enterAnim="@anim/from_right"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.userBlinkit.auth.SigninFragment"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_signinFragment_to_OTPFragment"
            app:destination="@id/OTPFragment"
            app:enterAnim="@anim/from_right"/>
    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.userBlinkit.auth.OTPFragment"
        android:label="fragment_o_t_p"
        tools:layout="@layout/fragment_o_t_p" >
        <action
            android:id="@+id/action_OTPFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:popUpTo="@id/signinFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/from_left"/>
    </fragment>
</navigation>